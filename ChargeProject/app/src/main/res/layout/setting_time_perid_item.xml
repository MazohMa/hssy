<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <include layout="@layout/top_simple_layout" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0.5dp" />

    <LinearLayout
        android:id="@+id/display_statue"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="#ECEAE8"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/h10"
            android:layout_marginLeft="@dimen/w40"
            android:layout_marginRight="@dimen/w20"
            android:layout_marginTop="@dimen/h10"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_water_blue"
            android:gravity="center"
            android:text="添加"
            android:textColor="@color/text_white"
            android:textSize="@dimen/h16" />

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/h10"
            android:layout_marginLeft="@dimen/w20"
            android:layout_marginRight="@dimen/w40"
            android:layout_marginTop="@dimen/h10"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_orange"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/text_white"
            android:textSize="@dimen/h16" />
    </LinearLayout>

</LinearLayout>