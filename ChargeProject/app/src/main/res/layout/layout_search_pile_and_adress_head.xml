<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/h5"
                android:paddingLeft="@dimen/w12"
                android:paddingRight="@dimen/w12"
                android:paddingTop="@dimen/h5"
                android:background="@drawable/selector_address_background_click_color">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/h5"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="信息名"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/pressed_grey"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_message_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/h5"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="信息内容"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/pressed_grey"
        android:visibility="visible"/>

    <View
        android:id="@+id/split_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_message"
        android:background="@color/split_line_gray"/>
</RelativeLayout>