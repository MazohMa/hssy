<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:coustom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_pile_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_price"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/w15"
            android:layout_marginTop="@dimen/h2"
            android:text="type"
            android:textColor="@color/sky_blue"
            android:textSize="@dimen/h17" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_price"
            android:layout_marginTop="@dimen/h2"
            android:layout_toRightOf="@id/tv_pile_type"
            android:text="空闲"
            android:textColor="@color/sky_blue"
            android:textSize="@dimen/h17" />

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/h4"
            android:gravity="bottom"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_price_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/h2"
                android:gravity="bottom"
                android:text="@string/charge_price_with_symbol"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/h14" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="0.6"
                android:textColor="@color/sky_blue"
                android:textSize="@dimen/h20" />

            <TextView
                android:id="@+id/tv_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="/kWh"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/h14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_price"
            android:background="@color/split_line_gray" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ll_price"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/tv_distance"
            android:ellipsize="end"
            android:gravity="left"
            android:text="海珠区江南大道中325号首层"
            android:textColor="@color/text_gray_dark"
            android:textSize="@dimen/h17" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_location"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_location"
            android:layout_marginTop="4dp"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="3.6km"
            android:textColor="@color/text_gray_light"
            android:textSize="@dimen/h14" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h10"
        android:layout_below="@+id/ll_price"
        android:background="@color/split_line_gray" />


    <LinearLayout
        android:id="@+id/ll_electricity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/h20"
        android:paddingTop="@dimen/h20">

        <TextView
            android:id="@+id/tv_electricity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/w8"
            android:text="@string/current_progress"
            android:textColor="@color/black"
            android:textSize="@dimen/h17" />

        <SeekBar
            android:id="@+id/sb_soc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_electricity"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/tv_electricity"
            android:layout_weight="1.0"
            android:max="100"
            android:maxHeight="@dimen/h8"
            android:minHeight="@dimen/h8"
            android:thumbOffset="@dimen/h4"
            android:padding="@dimen/h3"
            android:progress="10"
            android:progressDrawable="@drawable/soc_seekbar"
            android:thumb="@drawable/charging_expected" />


        <TextView
            android:id="@+id/tv_electricity_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w8"
            android:text="80%"
            android:textColor="@color/text_gray_light"
            android:textSize="@dimen/h14" />
    </LinearLayout>

