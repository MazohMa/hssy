<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <include layout="@layout/top_simple_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h320"
        android:background="@color/bg_white"
        android:divider="@drawable/line1"
        android:orientation="vertical"
        android:showDividers="middle" >

        <RelativeLayout
            android:id="@+id/pilename_layout_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/select_grey_white_click"
            android:paddingLeft="@dimen/w12"
            android:paddingRight="@dimen/w12" >

            <ImageButton
                android:id="@+id/imageButton_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8" />

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/h12"
                android:layout_toLeftOf="@+id/imageButton_next"
                android:layout_toRightOf="@+id/name_tvs"
                android:layout_marginLeft="@dimen/w40"
                android:gravity="right"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/name_tvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/h12"
                android:gravity="center_vertical"
                android:text="名称"
                android:textColor="@color/text_gray_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/display_state_layout_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/select_grey_white_click"
            android:paddingLeft="@dimen/w12"
            android:paddingRight="@dimen/w12" >

            <ImageButton
                android:id="@+id/imageButton_next9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8" />

            <TextView
                android:id="@+id/display_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/h12"
                android:layout_toLeftOf="@+id/imageButton_next9"
                android:gravity="center_vertical"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/display_tvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/h12"
                android:gravity="center_vertical"
                android:text="电桩发布"
                android:textColor="@color/text_gray_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shouquanyonghu_layout_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/select_grey_white_click"
            android:paddingLeft="@dimen/w12"
            android:paddingRight="@dimen/w12" >

            <ImageButton
                android:id="@+id/chongdianfuwufei_imageButton_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8" />

            <TextView
                android:id="@+id/shouquan_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/h12"
                android:layout_toLeftOf="@+id/chongdianfuwufei_imageButton_next"
                android:gravity="center_vertical"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/shouquan_suer_tv_tvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/h12"
                android:gravity="center_vertical"
                android:text="授权用户"
                android:textColor="@color/text_gray_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dianzhuangxinxi_layout_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/select_grey_white_click"
            android:paddingLeft="@dimen/w12"
            android:paddingRight="@dimen/w12" >

            <ImageButton
                android:id="@+id/dianzhuangtype_imageButton_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8" />

            <ImageButton
                android:id="@+id/pic_pile_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/h12"
                android:layout_toLeftOf="@+id/dianzhuangtype_imageButton_next"
                android:background="@drawable/personal_icon_2dcode"
                android:padding="@dimen/h8" />

            <TextView
                android:id="@+id/dianzhuangxinxi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/dianzhuangtype_imageButton_next"
                android:layout_marginRight="@dimen/h12"
                android:layout_toLeftOf="@+id/dianzhuangtype_imageButton_next"
                android:gravity="center_vertical"
                android:textColor="@color/text_green" />

            <TextView
                android:id="@+id/dianzhuangxinxi_tvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/h12"
                android:gravity="center_vertical"
                android:text="电桩信息"
                android:textColor="@color/text_gray_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pile_current_time_layout_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/select_grey_white_click"
            android:paddingLeft="@dimen/w12"
            android:paddingRight="@dimen/w12" >

            <ImageButton
                android:id="@+id/dianzhuangtype_imageButton_next122"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8" />

            <TextView
                android:id="@+id/pile_current_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/h12"
                android:layout_toLeftOf="@+id/dianzhuangtype_imageButton_next122"
                android:text="09:20:11"
                android:textColor="@color/text_gray"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/pile_current_time_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/h12"
                android:gravity="center_vertical"
                android:text="电桩当前时间"
                android:textColor="@color/text_gray_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/overtime_layout_id"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/h12"
            android:layout_marginRight="@dimen/h12"
            android:layout_weight="1"
            android:background="@drawable/select_grey_white_click"
            android:visibility="gone" >

            <ImageButton
                android:id="@+id/dengguang_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/h12"
                android:background="@drawable/icon_on"
                android:padding="@dimen/h8" />

            <TextView
                android:id="@+id/overtime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/h12"
                android:gravity="center_vertical"
                android:text="灯光"
                android:textColor="@color/text_gray_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menjin_layout_id"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/h12"
            android:layout_marginRight="@dimen/h12"
            android:layout_weight="1"
            android:background="@drawable/select_grey_white_click"
            android:visibility="gone" >

            <ImageButton
                android:id="@+id/door_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/h12"
                android:background="@drawable/icon_off"
                android:padding="@dimen/h8" />

            <TextView
                android:id="@+id/menjin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/h12"
                android:gravity="center_vertical"
                android:text="门禁"
                android:textColor="@color/text_gray_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fuhe_layout_id"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/h12"
            android:layout_marginRight="@dimen/h12"
            android:layout_weight="1"
            android:background="@drawable/select_grey_white_click"
            android:visibility="gone" >

            <ImageButton
                android:id="@+id/fuhe_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/h12"
                android:background="@drawable/icon_on"
                android:padding="@dimen/h8" />

            <TextView
                android:id="@+id/fuhe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/h12"
                android:gravity="center_vertical"
                android:text="负荷"
                android:textColor="@color/text_gray_dark" />
        </RelativeLayout>

        <include layout="@layout/line_horizontal_grey_small" />
    </LinearLayout>

</LinearLayout>