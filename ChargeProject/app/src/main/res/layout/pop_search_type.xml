<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_black_round_middle"
    android:paddingBottom="@dimen/h6"
    android:paddingLeft="@dimen/w4"
    android:paddingRight="@dimen/w4"
    android:paddingTop="@dimen/h6" >

    <ImageView
        android:layout_marginTop="@dimen/h6"
        android:id="@+id/iv_icon_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_tab_map" />

    <TextView
        android:id="@+id/tv_find_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_icon_address"
        android:layout_alignTop="@id/iv_icon_address"
        android:layout_toRightOf="@id/iv_icon_address"
        android:gravity="center"
        android:paddingRight="@dimen/w16"
        android:text="@string/find_address" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h1"
        android:layout_alignLeft="@id/iv_icon_address"
        android:layout_alignRight="@id/tv_find_address"
        android:layout_below="@id/iv_icon_address"
        android:layout_marginTop="@dimen/h1"
        layout="@layout/line_horizontal_grey_small" />

    <ImageView
        android:id="@+id/iv_icon_pile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_icon_address"
        android:layout_alignRight="@id/iv_icon_address"
        android:layout_below="@id/iv_icon_address"
        android:src="@drawable/icon_sai1" />

    <TextView
        android:id="@+id/tv_find_pile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_icon_pile"
        android:layout_alignTop="@id/iv_icon_pile"
        android:layout_toRightOf="@id/iv_icon_pile"
        android:gravity="center"
        android:paddingRight="@dimen/w16"
        android:text="@string/find_name" />

</RelativeLayout>