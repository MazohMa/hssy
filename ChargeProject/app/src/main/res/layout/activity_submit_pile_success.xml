<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <include layout="@layout/top_simple_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_marginBottom="@dimen/h20"
            android:layout_marginTop="@dimen/h100"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h180"
            android:src="@drawable/add_success"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="提交信息成功"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/h18" />
        <TextView
            android:layout_marginTop="@dimen/h14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="感谢您对我们的帮助!"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/h22" />
    </LinearLayout>

</LinearLayout>