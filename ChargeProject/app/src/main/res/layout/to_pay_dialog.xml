<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/h130"
        android:layout_height="@dimen/h130"
        android:gravity="center"
        android:background="@drawable/linearlayout_light_round"
        >
        <ImageView
            android:id="@+id/img_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_baiduicon"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_tip"
            android:layout_below="@+id/img_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="百度钱包支付"
            />
        <TextView
            android:id="@+id/tv_soso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_tip"
            android:gravity="center"
            android:text=". . ."
            />
    </RelativeLayout>
</LinearLayout>