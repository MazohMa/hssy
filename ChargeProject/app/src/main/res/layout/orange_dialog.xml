<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/yellow_dialog_box_top"
        android:gravity="center"
        android:paddingTop="@dimen/h10"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/w20" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/h130"
        android:background="@drawable/yellow_dialog_box_middle"
        android:paddingLeft="@dimen/w15"
        android:paddingRight="@dimen/w15" >

        <TextView
            android:id="@+id/tv_content"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textColor="@color/white"
            android:textSize="@dimen/w19" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/w15"
            android:layout_marginRight="@dimen/w15"
            android:background="#20000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_dialog_box_bottom"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/h15"
            android:paddingLeft="@dimen/w15"
            android:paddingRight="@dimen/w15" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/w18" />

            <View
                android:id="@+id/divider"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/h50"
                android:background="#20000000" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/w18" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>