<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pile_layout_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/line1"
        android:dividerPadding="2dp"
        android:orientation="vertical"
        android:showDividers="middle" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="@dimen/w10"
            android:paddingRight="@dimen/w10">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/h5"
                android:text="用户名"
                android:textColor="@color/text_gray_dark"
                android:textSize="@dimen/h12" />

            <TextView
                android:id="@+id/date_y_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/h5"
                android:text="2015.02.02"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/h12"
                android:layout_alignTop="@+id/date_h_m"
                android:layout_toLeftOf="@+id/date_h_m"
                android:layout_toStartOf="@+id/date_h_m" />

            <TextView
                android:id="@+id/date_h_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/h5"
                android:paddingLeft="@dimen/h2"
                android:text="17:42"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/h12"
                android:layout_above="@+id/command_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <com.xpg.hssy.view.EvaluateColumn
                android:id="@+id/eva_star_point"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/h23"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_user_name"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/h5" />
            <TextView
                android:id="@+id/command_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/h5"
                android:paddingLeft="@dimen/h8"
                android:text="非常满意！！"
                android:textColor="@color/text_gray_dark"
                android:layout_below="@+id/eva_star_point"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>