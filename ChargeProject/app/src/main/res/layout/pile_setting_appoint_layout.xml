<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bg_grey">

    <LinearLayout
        android:id="@+id/id_Dianzhuangsettingfragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/quanbu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/divider_hight_line"
            android:checked="true"
            android:gravity="center"
            android:padding="4dp"
            android:text="全部"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/daiqueren_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/divider_hight_line"
            android:gravity="center"
            android:padding="4dp"
            android:text="待确认"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/daifukuan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/divider_hight_line"
            android:gravity="center"
            android:padding="4dp"
            android:text="代付款"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/yiwancheng_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/divider_hight_line"
            android:gravity="center"
            android:padding="4dp"
            android:text="已完成"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/yiguoqi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/divider_hight_line"
            android:gravity="center"
            android:padding="4dp"
            android:text="已过期"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_Dianzhuangsettingfragment_title"
        android:background="@color/bg_grey"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/dianzhuangsetting_yuyue_all_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" />

      
    </LinearLayout>

</RelativeLayout>