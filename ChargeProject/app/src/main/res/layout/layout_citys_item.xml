<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grid_background"
    android:gravity="left|center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/w15"
    android:paddingRight="@dimen/w15"
    android:paddingTop="@dimen/h16" >

    <TextView
        android:id="@+id/city1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w15"
        android:layout_marginRight="@dimen/w15"
        android:layout_weight="1"
        android:background="@drawable/selector_city_text_background_click_color"
        android:gravity="center"
        android:paddingBottom="@dimen/h6"
        android:paddingTop="@dimen/h6"
        android:text="北京市"
        android:textColor="@drawable/selector_city_text_click_color" />

    <TextView
        android:id="@+id/city2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w15"
        android:layout_marginRight="@dimen/w15"
        android:layout_weight="1"
        android:background="@drawable/selector_city_text_background_click_color"
        android:gravity="center"
        android:paddingBottom="@dimen/h6"
        android:paddingTop="@dimen/h6"
        android:text="北京市"
        android:textColor="@drawable/selector_city_text_click_color" />

    <TextView
        android:id="@+id/city3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w15"
        android:layout_marginRight="@dimen/w15"
        android:layout_weight="1"
        android:background="@drawable/selector_city_text_background_click_color"
        android:gravity="center"
        android:paddingBottom="@dimen/h6"
        android:paddingTop="@dimen/h6"
        android:text="北京市"
        android:textColor="@drawable/selector_city_text_click_color" />

</LinearLayout>