<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white"
              android:orientation="vertical">

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_simple_layout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d5"
        android:background="@color/split_line_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_grey_white_click"
        android:paddingBottom="@dimen/h12"
        android:paddingTop="@dimen/h12">

        <TextView
            android:id="@+id/tv_message_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w18"
            android:text="@string/message_notification_setting_push"
            android:textColor="@color/black"
            android:textSize="@dimen/h18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_message_notification"
            android:layout_below="@id/tv_message_notification"
            android:layout_marginTop="@dimen/h15"
            android:text="@string/message_notification_setting_push_explain"
            android:textSize="@dimen/h12"/>

        <ImageView
            android:id="@+id/iv_message_push_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/w10"
            android:background="@drawable/btn_show_free_pile_selector"
            android:padding="@dimen/h8"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d5"
        android:background="@color/split_line_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_grey_white_click"
        android:paddingBottom="@dimen/h12"
        android:paddingTop="@dimen/h12">

        <TextView
            android:id="@+id/tv_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w18"
            android:text="@string/message_notification_setting_transaction"
            android:textColor="@color/black"
            android:textSize="@dimen/h18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_transaction"
            android:layout_below="@id/tv_transaction"
            android:layout_marginTop="@dimen/h15"
            android:text="@string/message_notification_setting_transaction_explain"
            android:textSize="@dimen/h12"/>

        <ImageView
            android:id="@+id/iv_transaction_push_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/w10"
            android:background="@drawable/btn_show_free_pile_selector"
            android:padding="@dimen/h8"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d5"
        android:background="@color/split_line_gray"/>

</LinearLayout>