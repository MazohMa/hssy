<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/rg_pager_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:layout_alignParentBottom="true"
        android:background="@color/water_blue"
        android:orientation="horizontal"
        android:paddingTop="@dimen/h5">

        <RadioButton
            android:id="@+id/rb_charge_tab"
            style="@style/main_tab"
            android:layout_gravity="center"
            android:checked="true"
            android:drawableTop="@drawable/charge_bg"
            android:gravity="center"
            android:paddingLeft="0dp"/>

        <RadioButton
            android:id="@+id/rb_search_tab"
            style="@style/main_tab"
            android:layout_gravity="center"
            android:drawableTop="@drawable/search_pole_bg"
            android:gravity="center"
            android:paddingLeft="0dp"
            />

        <RadioButton
            android:id="@+id/rb_focus_tab"
            style="@style/main_tab"
            android:layout_gravity="center"
            android:drawableTop="@drawable/focus_bg"
            android:gravity="center"
            android:paddingLeft="0dp"
            />

        <RadioButton
            android:id="@+id/rb_me_tab"
            style="@style/main_tab"
            android:layout_gravity="center"
            android:drawableTop="@drawable/me_bg"
            android:gravity="center"
            android:paddingLeft="0dp"
            />

        <!--
        <RadioButton
            android:id="@+id/rb_display_tab"
            style="@style/main_tab"
            android:paddingLeft="0dp"
            android:drawableTop="@drawable/zhuangfabu_bg" />

        -->
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_above="@id/rg_pager_tab"/>
