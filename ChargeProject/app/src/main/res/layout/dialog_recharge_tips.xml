<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/h290"
        android:layout_height="@dimen/h50"
        android:background="@drawable/dialog_title_waterblue_round" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/white"
            android:textSize="@dimen/w20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h6"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_baifubao"
        android:layout_width="@dimen/h290"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/h25">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h7"
            android:layout_alignParentTop="true"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_recharge_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h20"
            android:text="充值成功"
            android:textColor="@color/black"
            android:textSize="@dimen/w25"/>

      <Button
          android:id="@+id/btn_ok"
          android:layout_marginTop="@dimen/h40"
          style="@style/btn_water_blue_small2"
          android:text="知道了"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_marginTop="@dimen/h20"
            style="@style/btn_water_gray_small2"
            android:visibility="gone"
            android:text="取消充值"/>

    </LinearLayout>



</LinearLayout>