<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_simple_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h2"
                android:layout_marginLeft="@dimen/h12"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h24"
                android:text="1. 充电币兑换"
                android:textColor="@color/black"
                android:textSize="@dimen/h20"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h24"
                android:layout_marginLeft="@dimen/h12"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h2"
                android:text="充电币值与现金等额兑换,即: 1.01充电币=1.01元"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/h16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_line_black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/split_line_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h14"
                android:layout_marginLeft="@dimen/h12"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h24"
                android:text="2. 充电币充值"
                android:textColor="@color/black"
                android:textSize="@dimen/h20"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/charge_money_instructions_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h24"
                android:layout_marginLeft="@dimen/h12"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h14"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可选取 "
                    android:textColor="@color/text_gray_light"
                    android:textSize="@dimen/h16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 百度钱包 "
                    android:textColor="@color/water_blue"
                    android:textSize="@dimen/h16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="或"
                    android:textColor="@color/text_gray_light"
                    android:textSize="@dimen/h16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 支付宝 "
                    android:textColor="@color/water_blue"
                    android:textSize="@dimen/h16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 充值"
                    android:textColor="@color/text_gray_light"
                    android:textSize="@dimen/h16"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/split_line_black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/split_line_gray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h2"
                android:layout_marginLeft="@dimen/h12"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h24"
                android:text="3. 充电币使用流程"
                android:textColor="@color/black"
                android:textSize="@dimen/h20"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h14"
                android:layout_marginLeft="@dimen/h12"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h2"
                android:text="当您需要支付充电费用时"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/h16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h2"
                android:layout_marginLeft="@dimen/h12"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h14"
                android:text="(1)&#160;&#160;选择需支付的订单"
                android:textColor="@color/water_blue"
                android:textSize="@dimen/h16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h14"
                android:layout_marginLeft="@dimen/w38"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h2"
                android:text="@string/charge_money_instructions_1"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/h16"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/charge_money_instructions_2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h14"
                android:layout_marginLeft="@dimen/w38"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h14"
                android:text="@string/charge_money_instructions_2"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/h16"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/charge_money_instructions_3"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/h14"
                android:background="@color/split_line_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h2"
                android:layout_marginLeft="@dimen/h12"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h14"
                android:text="(2)&#160;&#160;充电币付费"
                android:textColor="@color/water_blue"
                android:textSize="@dimen/h16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h14"
                android:layout_marginLeft="@dimen/w38"
                android:layout_marginRight="@dimen/h12"
                android:layout_marginTop="@dimen/h2"
                android:text="@string/charge_money_instructions_3"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/h16"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/charge_money_instructions_4"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
