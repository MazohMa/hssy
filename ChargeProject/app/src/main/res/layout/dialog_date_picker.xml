<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/blue_dialog_box_top"
        android:gravity="center"
        android:paddingTop="@dimen/h10"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/w20" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_dialog_box_middle"
        android:paddingLeft="@dimen/w15"
        android:paddingRight="@dimen/w15" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textColor="@color/white"
                android:textSize="@dimen/w20" />

            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textColor="@color/white"
                android:textSize="@dimen/w20" />

            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textColor="@color/white"
                android:textSize="@dimen/w20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <View
                android:layout_width="@dimen/h290"
                android:layout_height="@dimen/h1"
                android:background="@color/white" />

            <View
                android:layout_width="@dimen/h290"
                android:layout_height="@dimen/h38" />

            <View
                android:layout_width="@dimen/h290"
                android:layout_height="@dimen/h1"
                android:background="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/w15"
            android:layout_marginRight="@dimen/w15"
            android:background="#20000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_dialog_box_bottom"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/h15"
            android:paddingLeft="@dimen/w15"
            android:paddingRight="@dimen/w15" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/w18" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/h50"
                android:background="#20000000" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/w18" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>