<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/h290"
        android:layout_height="@dimen/h50"
        android:background="@drawable/dialog_title_waterblue_round">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/h5"
            android:text="title"
            android:textColor="@color/white"
            android:textSize="@dimen/w20"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h6"
            android:layout_alignParentBottom="true"
            android:background="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/h290"
        android:layout_height="@dimen/h180"
        android:background="@drawable/linearlayout_round"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h140"
            android:layout_gravity="center"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/ll_pileName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center|left"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="电桩名称："
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/w20"/>

                <TextView
                    android:id="@+id/tv_pileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="123456789ABCDEAAASASASAS"
                    android:textColor="@color/grey_dark"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ownerName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center|left"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属业主："
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/w20"/>

                <TextView
                    android:id="@+id/tv_ownerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="才哥"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/w20"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充电价格："
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/w20"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$22"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/w20"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ble_id"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出厂编码："
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/w20"/>

                <TextView
                    android:id="@+id/tv_ble_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="88888888888"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/w20"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="取消"
                    android:textColor="@color/text_gray_light"
                    android:textSize="@dimen/w18"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/h50"
                    android:background="@color/gray"/>

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="确定"
                    android:textColor="@color/water_blue"
                    android:textSize="@dimen/w18"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>