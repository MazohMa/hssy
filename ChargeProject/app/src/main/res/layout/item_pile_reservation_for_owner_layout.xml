<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_white" >

    <LinearLayout
        android:id="@+id/orderno_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/order_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textColor="@color/water_blue" />

        <TextView
            android:id="@+id/order_tvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textColor="@color/water_blue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yuyueren_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderno_layout"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/yuyueren_tvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Amni"
            android:textColor="@color/black"
            android:textSize="@dimen/h20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lianxidianhua_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yuyueren_layout"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/contactno_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="联系电话："
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/contactno_tvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="123456789"
            android:textColor="@color/grey_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yuyueshiduan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lianxidianhua_layout"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/yuyueshiduan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="预约时段："
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/yuyueshiduan_ym_tvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="2014/12/13"
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/yuyueshiduan_hm_tvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="17:30-18:30"
            android:textColor="@color/grey_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/charge_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yuyueshiduan"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/charge_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="充电时间："
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/charge_time_tvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="2014/12/13"
            android:textColor="@color/grey_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/charge_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charge_time"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/charge_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="充电电量："
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/charge_value_tvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="0"
            android:textColor="@color/grey_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/charge_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charge_value"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/charge_cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="充电费用："
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/charge_cost_tvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="0"
            android:textColor="@color/grey_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/charge_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charge_cost"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/charge_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="充电流水号："
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/charge_id_tvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="0"
            android:textColor="@color/grey_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charge_id"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/pay_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="付款时间："
            android:textColor="@color/grey_dark" />

        <TextView
            android:id="@+id/pay_time_tvs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="0"
            android:textColor="@color/grey_dark" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/daiqueren_layput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_time"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:padding="2dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/tv_order_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|left"
            android:padding="2dp"
            android:text="@string/status_confrimed"
            android:textColor="@color/text_orange" />

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_reject"
            android:layout_alignBottom="@+id/btn_reject"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:background="@drawable/shape_btn_water_blue"
            android:padding="6dp"
            android:text="@string/agree_order"
            android:textColor="@color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_reject"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_order_status_message"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/btn_agree"
            android:background="@drawable/shape_btn_orange"
            android:padding="6dp"
            android:text="@string/reject_order"
            android:textColor="@color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/command_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/eva_star_point"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/h5"
            android:text="5.0"
            android:textColor="@color/water_blue"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/eva_star_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/star_rank_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/booking_info_favourite_3" />

            <ImageView
                android:id="@+id/star_rank_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/w2"
                android:src="@drawable/booking_info_favourite_3" />

            <ImageView
                android:id="@+id/star_rank_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/w2"
                android:src="@drawable/booking_info_favourite_3" />

            <ImageView
                android:id="@+id/star_rank_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/w2"
                android:src="@drawable/booking_info_favourite_3" />

            <ImageView
                android:id="@+id/star_rank_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/w2"
                android:src="@drawable/booking_info_favourite_3" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daiqueren_layput"
        android:background="@drawable/line1"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>