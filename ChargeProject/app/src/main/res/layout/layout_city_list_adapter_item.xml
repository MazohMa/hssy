<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <TextView
        android:id="@+id/tv_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/section_background"
        android:paddingLeft="@dimen/w10"
        android:singleLine="true"
        android:text="B"
        android:textColor="@color/black"
        android:textSize="@dimen/h16"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_hot_citys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_section"
        android:background="@color/grid_background"
        android:columnCount="3"
        android:orientation="vertical"
        android:paddingBottom="@dimen/h16" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/select_city_activity_split_line_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_hot_citys"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_city_text_background_click_color"
            android:gravity="center|left"
            android:paddingBottom="@dimen/h8"
            android:paddingLeft="@dimen/w10"
            android:paddingTop="@dimen/h8"
            android:singleLine="true"
            android:text="广州市"
            android:textColor="@color/black"
            android:textSize="@dimen/h16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/w10"
            android:background="@color/select_city_activity_split_line_color" />
    </LinearLayout>

</RelativeLayout>