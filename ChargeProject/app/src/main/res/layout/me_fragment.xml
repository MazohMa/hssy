<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h70"
        android:background="@color/water_blue"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/h10"
        android:paddingRight="@dimen/h10">


        <LinearLayout
            android:id="@+id/ll_userInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_usericon"
                android:layout_width="@dimen/h55"
                android:layout_height="@dimen/h55"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w8"
                android:scaleType="centerCrop"
                android:src="@drawable/personal_touxiang"/>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/please_login"
                android:textColor="@color/text_white"
                android:textSize="20sp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/badge_view"
            android:layout_width="@dimen/w45"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_message"
                android:layout_width="@dimen/w30"
                android:layout_height="@dimen/h30"
                android:layout_gravity="right"
                android:background="@drawable/personal_message"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/img_login_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/sign_out_bt"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llyt_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/h30"
        android:background="@color/bg_white"
        android:divider="@drawable/line1"
        android:dividerPadding="@dimen/w5"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end">

        <LinearLayout
            android:id="@+id/center_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/me_icon_proposal"/>

            <TextView
                android:id="@+id/btn_messages"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="消息中心"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_appoint_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/me_icon_order"/>

            <TextView
                android:id="@+id/btn_order"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="@string/my_order"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wallet_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/personal_center_wallet"/>

            <TextView
                android:id="@+id/btn_wallet"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="@string/my_wallet"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/collect_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/me_icon_collection"/>

            <TextView
                android:id="@+id/btn_collection"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="@string/my_collection"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_evaluate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/personal_center_comment"/>

            <TextView
                android:id="@+id/btn_my_evaluate"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="@string/my_evaluation"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h5"
            android:background="@color/line_grey_back"
            />

        <LinearLayout
            android:id="@+id/add_public_pile_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/personal_center_all"/>

            <TextView
                android:id="@+id/tv_add_public_pile"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="众筹标点"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pile_manage_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/me_icon_management"/>

            <TextView
                android:id="@+id/btn_device"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="电桩管理"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/service_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/menu_phone_icon"/>

            <TextView
                android:id="@+id/btn_phone"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="客服中心"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h5"
            android:background="@color/line_grey_back"/>

        <LinearLayout
            android:id="@+id/suggest_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/me_icon_service"/>

            <TextView
                android:id="@+id/btn_suggesstion"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="帮助与反馈"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_my_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/personal_center_site"/>

            <TextView
                android:id="@+id/btn_my_setting"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="@string/my_setting"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/version_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/me_icon_update"/>

            <TextView
                android:id="@+id/btn_update"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="版本更新"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h5"
            android:background="@color/line_grey_back"/>

        <LinearLayout
            android:id="@+id/about_app__rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h50"
            android:background="@drawable/select_grey_white_click"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/h60"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/personal_center_about"/>

            <TextView
                android:id="@+id/about_app_tv"
                style="@style/main_menu_btn"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="0dp"
                android:text="关于优易充"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/w10"
                android:background="@drawable/icon_next"
                android:padding="@dimen/h8"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>