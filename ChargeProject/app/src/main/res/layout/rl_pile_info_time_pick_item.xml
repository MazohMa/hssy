<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/h10"
    android:paddingTop="@dimen/h10" >

    <TextView
        android:id="@+id/tv_time_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/h5"
        android:text="13:00 - 17:30"
        android:textColor="@color/water_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time_group"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_time_item_left"
            android:layout_width="@dimen/w160"
            android:layout_height="@dimen/h40"
            android:layout_marginRight="@dimen/w5"
            android:background="@drawable/selector_pile_info_time_pick_background"
            android:drawableRight="@drawable/selector_pile_info_time_pick_tick"
            android:gravity="center"
            android:paddingLeft="@dimen/w14"
            android:paddingRight="@dimen/w14"
            android:text="13:00 - 17:00"
            android:textColor="@drawable/selector_pile_info_time_pick_text_background"
            android:textSize="@dimen/w16" />

        <TextView
            android:id="@+id/tv_time_item_right"
            android:layout_width="@dimen/w160"
            android:layout_height="@dimen/h40"
            android:layout_marginLeft="@dimen/w5"
            android:background="@drawable/selector_pile_info_time_pick_background"
            android:drawableRight="@drawable/selector_pile_info_time_pick_tick"
            android:gravity="center"
            android:paddingLeft="@dimen/w14"
            android:paddingRight="@dimen/w14"
            android:text="13:00 - 17:00"
            android:textColor="@drawable/selector_pile_info_time_pick_text_background"
            android:textSize="@dimen/w16" />
    </LinearLayout>

</RelativeLayout>