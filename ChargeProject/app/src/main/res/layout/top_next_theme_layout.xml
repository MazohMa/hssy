<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_height"
                android:background="@color/water_blue">

    <ImageButton
        android:id="@+id/btn_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingLeft="@dimen/w10"
        android:paddingRight="@dimen/w10"
        android:scaleType="center"
        android:src="@drawable/back_bt"
        android:visibility="visible"/>

    <TextView
        android:id="@id/tv_center"
        style="@style/text_title_top"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/icon_tab_logo"
        android:drawablePadding="@dimen/w5"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="#ffffff"
        />

    <ImageButton
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingLeft="@dimen/w10"
        android:paddingRight="@dimen/w10"
        android:scaleType="center"
        android:src="@drawable/next_bt"
        android:visibility="visible"/>

</RelativeLayout>
    
