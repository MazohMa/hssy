<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="drop_down_list_header_default_text">重试</string>
    <string name="drop_down_list_header_pull_text">下拉刷新</string>
    <string name="drop_down_list_header_release_text">松开刷新</string>
    <string name="drop_down_list_header_loading_text">加载中&#8230;</string>
    <string name="drop_down_list_footer_default_text">重试</string>
    <string name="drop_down_list_footer_loading_text">加载中&#8230;</string>
    <string name="drop_down_list_footer_no_more_text">没有更多</string>
    <string name="image_content">Image</string>

    <dimen name="drop_down_list_header_padding_top">12dp</dimen>
    <dimen name="drop_down_list_header_padding_bottom">15dp</dimen>
    <dimen name="drop_down_list_header_release_min_distance">20dp</dimen>
    <dimen name="drop_down_list_header_progress_bar_height">19dp</dimen>
    <dimen name="drop_down_list_footer_progress_bar_height">19dp</dimen>
    <dimen name="drop_down_list_footer_button_margin_left">8dp</dimen>
    <dimen name="drop_down_list_footer_button_height">48dp</dimen>

    <!-- drop down list header font color -->
    <color name="drop_down_list_header_font_color">#272822</color>
    <!-- drop down list header second font color -->
    <color name="drop_down_list_header_second_font_color">#272822</color>
    <!-- drop down list footer font color -->
    <color name="drop_down_list_footer_font_color">#272822</color>

    <declare-styleable name="drop_down_list_attr">
        <attr name="isDropDownStyle" format="boolean" />
        <attr name="isOnBottomStyle" format="boolean" />
        <attr name="isAutoLoadOnBottom" format="boolean" />
    </declare-styleable>

    <style name="drop_down_list_header_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_header_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_header_progress_bar_height</item>
    </style>

    <style name="drop_down_list_footer_progress_bar_style">
        <item name="android:minHeight">@dimen/drop_down_list_footer_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/drop_down_list_footer_progress_bar_height</item>
    </style>

    <style name="drop_down_list_header_font_style">
        <item name="android:textColor">#272822</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="drop_down_list_header_second_font_style">
        <item name="android:textColor">#272822</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="drop_down_list_footer_font_style">
        <item name="android:textColor">#272822</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

</resources>